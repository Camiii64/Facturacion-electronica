@model FacturacionDTE.Models.Document

@{
    ViewData["Title"] = "Nueva Factura";
}

<h2>Nueva Factura</h2>

<form asp-action="Create" method="post" class="mt-3">
    <div class="mb-3">
        <label class="form-label">Cliente</label>
        <select asp-for="ClienteId" class="form-control" asp-items="@(new SelectList(ViewBag.Clientes, "ClienteId", "Nombre"))">
            <option value="">Seleccione un cliente</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Emisor</label>
        <select asp-for="EmisorId" class="form-control" asp-items="@(new SelectList(ViewBag.Emisores, "EmisorId", "Nombre"))">
            <option value="">Seleccione un emisor</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Número de Factura</label>
        <input asp-for="NumeroFactura" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Moneda</label>
        <input asp-for="Moneda" class="form-control" value="USD" />
    </div>

    <div class="mb-3">
        <label class="form-label">Total</label>
        <input asp-for="Total" class="form-control" type="number" step="0.01" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar Factura</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
