@model FacturacionDTE.Models.Document

@{
    ViewData["Title"] = "Detalle de Factura";
}

<h2>Detalle de Factura @Model.NumeroFactura</h2>

<div class="card p-3 mb-3">
    <h4>Datos Generales</h4>
    <p><strong>Cliente:</strong> @Model.Cliente?.Nombre</p>
    <p><strong>Emisor:</strong> @Model.Emisor?.Nombre</p>
    <p><strong>Fecha:</strong> @Model.FechaEmision.ToString("dd/MM/yyyy HH:mm")</p>
    <p><strong>Total:</strong> $@Model.Total</p>
    <p><strong>Estado:</strong> @Model.Estado</p>
</div>

@if (Model.DetalleDocumentos != null && Model.DetalleDocumentos.Any())
{
    <h4>Productos / Servicios</h4>
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Descripción</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.DetalleDocumentos)
            {
                <tr>
                    <td>@item.Producto?.Nombre</td>
                    <td>@item.Cantidad</td>
                    <td>$@item.PrecioUnitario</td>
                    <td>$@item.SubTotal</td>
                </tr>
            }
        </tbody>
    </table>
}

<hr />

<h4>Representaciones</h4>
<div class="row">
    <div class="col-md-6">
        <h5>XML</h5>
        <pre>@ViewBag.Xml</pre>
    </div>
    <div class="col-md-6">
        <h5>JSON</h5>
        <pre>@ViewBag.Json</pre>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Volver al listado</a>
