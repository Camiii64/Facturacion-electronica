@model IEnumerable<FacturacionDTE.Models.Document>

@{
    ViewData["Title"] = "Listado de Facturas";
}

<h2 class="mb-3">Listado de Facturas Emitidas</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>N° Factura</th>
            <th>Cliente</th>
            <th>Emisor</th>
            <th>Fecha Emisión</th>
            <th>Total</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var factura in Model)
        {
            <tr>
                <td>@factura.NumeroFactura</td>
                <td>@factura.Cliente?.Nombre</td>
                <td>@factura.Emisor?.Nombre</td>
                <td>@factura.FechaEmision.ToString("dd/MM/yyyy HH:mm")</td>
                <td>$@factura.Total</td>
                <td>@factura.Estado</td>
                <td>
                    <a asp-action="Details" asp-route-id="@factura.DocumentId" class="btn btn-sm btn-primary">Ver</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Nueva Factura</a>
