@{
    ViewData["Title"] = "Inicio - Farmacia Salud Total";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Bootstrap y estilos -->
<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/css/site.css" />

<div class="container py-5">

    <!-- Encabezado -->
    <div class="text-center mb-5">
        <img src="~/images/logo_farmacia.png" alt="Logo Farmacia" style="width:100px;height:auto;">
        <h1 class="fw-bold text-success mt-3">Farmacia Salud S.A. de C.V.</h1>
        <p class="text-muted fs-5">Sistema de Facturación Electrónica (DTE)</p>
        <hr class="w-50 mx-auto border-success">

    </div>

    <!-- Panel principal -->
    <div class="row g-4 justify-content-center">

        <!-- Facturas -->
        <div class="col-md-3">
            <div class="card shadow-lg border-0 menu-card">
                <div class="card-body text-center">
                    <div class="icon-circle bg-azul text-white mb-3">
                        <i class="bi bi-receipt fs-2"></i>
                    </div>
                    <h5 class="fw-bold mb-2">Facturas Electrónicas</h5>
                    <p class="text-muted small">Emite, revisa o genera tus documentos tributarios electrónicos.</p>
                    <a href="~/Facturas/Index" class="btn btn-success w-100">Ir a Facturas</a>
                </div>
            </div>
        </div>

        <!-- Productos -->
        <div class="col-md-3">
            <div class="card shadow-lg border-0 menu-card">
                <div class="card-body text-center">
                    <div class="icon-circle bg-warning text-dark mb-3">
                        <i class="bi bi-capsule fs-2"></i>
                    </div>
                    <h5 class="fw-bold mb-2">Productos</h5>
                    <p class="text-muted small">Administra los medicamentos y artículos disponibles en la farmacia.</p>
                    <a href="~/Productos/Index" class="btn btn-warning text-dark w-100">Ir a Productos</a>
                </div>
            </div>
        </div>

        <!-- Reportes -->
        <div class="col-md-3">
            <div class="card shadow-lg border-0 menu-card">
                <div class="card-body text-center">
                    <div class="icon-circle bg-secondary text-white mb-3">
                        <i class="bi bi-bar-chart fs-2"></i>
                    </div>
                    <h5 class="fw-bold mb-2">Reportes</h5>
                    <p class="text-muted small">Consulta el historial de facturas y estadísticas de ventas.</p>
                    <a href="#" class="btn btn-secondary w-100 disabled">Próximamente</a>
                </div>
            </div>
        </div>

    </div>

    <!-- Estadísticas  -->
    <div class="row mt-5 g-3 justify-content-center">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center p-3">
                <h6 class="text-muted mb-1">Facturas Emitidas Hoy</h6>
                <h2 class="text-success fw-bold">25</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center p-3">
                <h6 class="text-muted mb-1">Total Vendido (USD)</h6>
                <h2 class="text-success fw-bold">$1,230.50</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center p-3">
                <h6 class="text-muted mb-1">Clientes Registrados</h6>
                <h2 class="text-success fw-bold">142</h2>
            </div>
        </div>
    </div>

    <!-- Pie -->
    <div class="text-center mt-5">
        <p class="text-muted small">© @DateTime.Now.Year Farmacia Salud— Sistema de Facturación Electrónica DTE.</p>
    </div>
</div>

<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
