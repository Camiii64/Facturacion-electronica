@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Facturación DTE</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        :root {
            --primary-color: #007BFF; 
            --primary-hover: #0056b3; 
            --sidebar-bg: #1F2937; 
            --sidebar-text: #E5E7EB; 
            --content-bg: #F3F4F6; 
            --card-bg: #FFFFFF; 
            --card-shadow: 0 4px 12px rgba(0,0,0,0.08);
        }

        /* --- Cuerpo general --- */
        body {
            min-height: 100vh;
            background: var(--content-bg);
            font-family: 'Segoe UI', sans-serif;
            color: #1F2937;
        }

        /* --- Barra superior (topbar) --- */
        .topbar {
            height: 56px;
            background: var(--sidebar-bg);
            color: #fff;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1030;
            display: flex;
            align-items: center;
            padding: 0 1rem;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }

            .topbar .btn-toggle {
                background: none;
                border: none;
                color: #fff;
                font-size: 1.2rem;
                cursor: pointer;
                margin-right: 1rem;
            }

            .topbar .brand {
                font-weight: 700;
                font-size: 1.1rem;
            }

        /* --- Sidebar --- */
        .sidebar {
            width: 220px;
            position: fixed;
            top: 56px;
            left: 0;
            bottom: 0;
            background: var(--sidebar-bg);
            color: var(--sidebar-text);
            padding: 1rem 0;
            overflow: auto;
            transition: all 0.3s;
        }

            .sidebar .nav-link {
                color: var(--sidebar-text);
                padding: 0.6rem 1.5rem;
                border-radius: 0.35rem;
                margin: 0.25rem 0;
                transition: background 0.2s, color 0.2s;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background: var(--primary-color);
                    color: #fff;
                }

            .sidebar .brand {
                font-weight: 700;
                font-size: 1.1rem;
                padding-left: 1.5rem;
                margin-bottom: 1rem;
                color: var(--primary-color);
            }

        /* --- Contenido --- */
        .content {
            margin-left: 220px;
            padding: 80px 2rem 2rem;
        }

        /* --- Tarjetas --- */
        .card {
            background: var(--card-bg);
            border: none;
            border-radius: 0.65rem;
            box-shadow: var(--card-shadow);
        }

        .card-header {
            background: var(--primary-color);
            color: #fff;
            font-weight: 600;
            border-top-left-radius: 0.65rem;
            border-top-right-radius: 0.65rem;
        }

        /* --- Botones --- */
        .btn-primary {
            background: var(--primary-color);
            border: none;
        }

            .btn-primary:hover {
                background: var(--primary-hover);
            }

        .btn-success {
            background: var(--primary-color);
            border: none;
        }

            .btn-success:hover {
                background: var(--primary-hover);
            }

        /* --- Inputs y formularios --- */
        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(0,123,255,0.25);
        }

        /* --- Tabla detalle --- */
        #tablaDetalle .form-control {
            font-size: 0.875rem;
        }

        /* --- Footer --- */
        footer {
            background-color: #f8f9fa;
            padding: 1rem 0;
            text-align: center;
            color: #6b7280;
        }

    </style>
</head>
<body>
    <!-- Topbar -->
    <div class="topbar d-flex align-items-center px-4">
        <div class="d-flex align-items-center">
            <button class="btn btn-sm btn-outline-light me-3" id="btnToggleSidebar">☰</button>
            <span class="h5 mb-0">Facturación</span>
        </div>
        <div class="ms-auto text-white small"></div>
    </div>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="brand mb-3 px-3"></div>
        <nav class="nav flex-column px-2">
            <a class="nav-link active" href="/">Inicio</a>
            <a class="nav-link" href="/Facturas/Index">Facturas</a>
            <a class="nav-link" href="/Clientes/Index">Clientes</a>
            <a class="nav-link" href="/Productos/Index">Productos</a>
            <hr class="text-white-50" />
            <div class="px-3 small text-white-50">Ministerio de Hacienda</div>
        </nav>
    </div>

    <!-- Content -->
    <div class="content">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JS de departamentos y factura -->
    <script src="/js/departamentos.js"></script>
    <script src="/js/factura.frontend.js"></script>

    <script>
        // Toggle sidebar
        document.getElementById('btnToggleSidebar').addEventListener('click', function(){
            const sb = document.getElementById('sidebar');
            if (sb.style.display === 'none') sb.style.display = 'block';
            else sb.style.display = 'none';
        });
    </script>
</body>
</html>
